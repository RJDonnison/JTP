<configuration>

    <!-- Register the custom ColorConverter -->
    <conversionRule conversionWord="clr" converterClass="org.reujdon.jtp.shared.logging.ColorConverter"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%clr(%d{HH:mm:ss} [%thread]){gray} %highlight([%level]) - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
